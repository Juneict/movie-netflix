{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/.*", "dest": "frontend/$1" }
  ],
  "rewrites": [{ "source": "/.*", "destination": "/index.html" }],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://your-api-domain.com:3001"
  }
}
